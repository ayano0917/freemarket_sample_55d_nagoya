.listing-item-change-box
  = link_to '商品を編集する', '#', class: 'listing-item-change-box__edit-btn'
  %p.listing-item-change-box__text or
  - if item.status == ""
    = link_to '出品を一旦停止する', '#', class: 'listing-item-change-box__stop-btn'
  -else
    = link_to '出品を再開する', '#', class: 'listing-item-change-box__restart-btn'
  = link_to 'この商品を削除する', '#', class: 'listing-item-change-box__delete-btn'