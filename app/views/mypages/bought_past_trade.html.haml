= render 'shared/login-header'
- breadcrumb :bought_past_trade
= render 'layouts/breadcrumbs'
.wrapper
  = render 'mypages/mypage-sidebar2'
  .left-content
    %section.mypage-tab-container
      %h2.mypage-tab-head 購入した商品
      %ul.listing-tabs
        %li.bought__non-active
          %h3.font
            = link_to('取引中', bought_during_trading_user_mypage_path(current_user), class: 'font__link')
        %li.bought__active
          %h3.font
            = link_to('過去の取引', bought_past_trade_user_mypage_path(current_user), class: 'font__link')
      .tab-content
        %ul.mypage-item-list
          - if @items.present?
            = render partial: "item", collection: @items
          -else  
            %li.mypage-item-not-found
              取引中の商品がありません
= render 'shared/exhibition-button'
= render 'shared/app-banner'
= render 'shared/footer'