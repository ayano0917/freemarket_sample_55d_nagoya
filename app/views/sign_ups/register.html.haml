.new-registration-page
  %header.new-registration-page__header
    = link_to image_tag('//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3761641567', width: '185px', height: '49px' ), '/'
    .new-registration-page__header__process-bar
      %ol.new-registration-page__header__process-bar__inner
        %li.text1
          会員情報
          .dot1
          %hr.line1
        %li.text2
          電話番号認証
          .dot2
          %hr.line2
        %li.text3
          お届け先住所入力
          .dot3
          %hr.line3
        %li.text4
          支払い方法
          .dot4
          %hr.line4
        %li.text5
          完了
          .dot5
  %main.new-registration-page__main
    %h2.new-registration-page__main__title
      会員情報入力
    .new-registration-page__main__input-field
      .new-registration-page__main__box
        .new-registration-page__main__box__form
          .new-registration-page__main__box__form__title
            ニックネーム
          .new-registration-page__main__box__form__red-label
            必須
        %form
          %input.enter-text{ placeholder: "例) メルカリ太郎"}
        .new-registration-page__main__box__form
          .new-registration-page__main__box__form__title
            メールアドレス
          .new-registration-page__main__box__form__red-label
            必須
        %form
          %input.enter-text{ placeholder: "PC・携帯どちらでも可"}
        .new-registration-page__main__box__form
          .new-registration-page__main__box__form__title
            パスワード
          .new-registration-page__main__box__form__red-label
            必須
        %form
          %input.enter-text{ placeholder: "7文字以上"}
        .new-registration-page__main__box__form
          .new-registration-page__main__box__form__title
            パスワード(確認) 
          .new-registration-page__main__box__form__red-label
            必須
        %form
          %input.enter-text{ placeholder: "7文字以上"}
       


  = render 'shared/exhibition-page-footer' 