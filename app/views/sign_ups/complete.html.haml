.single-conteiner
  .single-header
    %h1
      = link_to image_tag('//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3761641567'), mains_path
    %nav.progress-bar
      %ol.clearfix
        %li.btn1-5
          会員情報
          .status1-5
        %li.btn2-5
          電話番号認証
          .status2-5
        %li.btn3-5
          お届け先住所登録
          .status3-5
        %li.btn4-5
          支払い方法
          .status4-5
        %li.btn5-5
          完了
          .status5-5
  .single-main
    %section.container
      %h2.single-head
        会員登録完了
      %form
        .single-content
          .form-group__top
            ありがとうございます。
            %br
            会員登録が完了しました。
          = link_to('メルカリをはじめる', mains_path(current_user), class: 'complete-btn')
  .single-main-bottom
  = render 'shared/app-banner'
  = render 'shared/exhibition-page-footer'
  