.single-conteiner
  .single-header
    %h1
      = link_to image_tag('//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3761641567'), 'root_path'
    %nav.progress-bar
      %ol.clearfix
        %li.btn1-4
          会員情報
          .status1-4
        %li.btn2-4
          電話番号認証
          .status2-4
        %li.btn3-4
          お届け先住所登録
          .status3-4
        %li.btn4-4
          支払い方法
          .status4-4
        %li.btn5-4
          完了
          .status5-4
  .single-main
    %section.container
      %h2.single-head
        支払い方法
      %form
        .single-content
          .form-group__top
            %label
              カード番号
            %span.absolute
              必須
            %input{placeholder: "例) メルカリ太郎", class: "input-default"}
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1248199994', width: '49px', height: '20px')
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1248199994', width: '34px', height: '20px')
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1248199994', width: '30px', height: '20px')
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1248199994', width: '32px', height: '20px')
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1248199994', width: '21px', height: '20px')
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1248199994', width: '32px', height: '20px')
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1248199994', width: '32px', height: '20px')
          .form-group
            %label
              有効期限
            %span.absolute
              必須
            %br
            .birthday-select-wrap
              .birthday-select-wrap__year
                = fa_icon 'chevron-down', class: 'birthday-select-wrap__year__btn'
                %input{placeholder: "例) メルカリ太郎", class: "input-default"}
              %span.birthday-select-wrap__font 年
              .birthday-select-wrap__month
                = fa_icon 'chevron-down', class: 'birthday-select-wrap__month__btn'
                %input{placeholder: "例) メルカリ太郎", class: "input-default"}
              %span.birthday-select-wrap__font 月
          .form-group
            %label
              セキュリティコード
            %span.absolute
              必須
            %input{placeholder: "例) メルカリ太郎", class: "input-default"}
          .form-group4
            %p
              = link_to('/', class: 'register-link') do
                = fa_icon('question-circle', class: 'pry-link__icon')
                カード裏面の番号とは?
                = fa_icon('angle-right', class: 'register-link__icon')
          %button.next-btn 次へ進む

  = render 'shared/exhibition-page-footer'