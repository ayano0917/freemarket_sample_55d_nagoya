.payment-page
  %header.payment-page__header
    = link_to image_tag('//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3761641567', width: '185px', height: '49px' ), '/'
    .payment-page__header__process-bar
      %ol.payment-page__header__process-bar__inner
        %li.text1
          会員情報
          .dot1
          %hr.line1
        %li.text2
          電話番号認証
          .dot2
          %hr.line2
        %li.text3
          お届け先住所入力
          .dot3
          %hr.line3
        %li.text4
          支払い方法
          .dot4
          %hr.line4
        %li.text5
          完了
          .dot5
  %main.payment-page__main
    %h2.payment-page__main__title
      支払い方法
    .payment-page__main__input-field
      .payment-page__main__box
        .payment-page__main__box__form
          .payment-page__main__box__form__title
            カード番号
          .payment-page__main__box__form__red-label
            必須
        %form
          %input.enter-text{ placeholder: "半角数字のみ"}
        .payment-page__main__box__credit-logo
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1248199994', width: '49px', height: '20px')
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1248199994', width: '34px', height: '20px')
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1248199994', width: '30px', height: '20px')
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1248199994', width: '32px', height: '20px')
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1248199994', width: '21px', height: '20px')
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1248199994', width: '32px', height: '20px')
          = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1248199994', width: '32px', height: '20px')
        .payment-page__main__box__form
          .payment-page__main__box__form__title
            有効期限
          .payment-page__main__box__form__red-label
            必須
        .payment-page__main__box__month  
          %select.select-month{name: "month_name"}
            %option{value: "01"} 01
            %option{value: "02"} 02
            %option{value: "03"} 03
            %option{value: "04"} 04
            %option{value: "05"} 05
            %option{value: "06"} 06
            %option{value: "07"} 07
            %option{value: "08"} 08
            %option{value: "09"} 09
            %option{value: "10"} 10
            %option{value: "11"} 11
            %option{value: "12"} 12
          =fa_icon 'chevron-down', class: 'select-month__down'
          %span 月
          %select.select-year{name: "year_name"}
            %option{value: "19"} 19
            %option{value: "20"} 20
            %option{value: "21"} 21
            %option{value: "22"} 22
            %option{value: "23"} 23
            %option{value: "24"} 24
            %option{value: "25"} 25
            %option{value: "26"} 26
            %option{value: "27"} 27
            %option{value: "28"} 28
            %option{value: "29"} 29
          =fa_icon 'chevron-down', class: 'select-year__down'
          %span 年
        .payment-page__main__box__form
          .payment-page__main__box__form__title
            セキュリティコード
          .payment-page__main__box__form__red-label
            必須
        %form
          %input.enter-text{ placeholder: "カード背面4桁もしくは3桁の番号"}
        .payment-page__main__box__form__note
          %span.question？
          カード裏面の番号とは？
        .payment-page__main__box__next-button
          = link_to complete_sign_up_path do
            .payment-page__main__box__text
              次へ進む
  = render 'shared/exhibition-page-footer'