.single-conteiner
  .single-header
    %h1
      = link_to image_tag('//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3761641567'), root_path
    %nav.progress-bar
      %ol.clearfix
        %li.btn1-4
          会員情報
          .status1-4
        %li.btn2-4
          電話番号認証
          .status2-4
        %li.btn3-4
          お届け先住所登録
          .status3-4
        %li.btn4-4
          支払い方法
          .status4-4
        %li.btn5-4
          完了
          .status5-4
  .single-main
    %section.container
      %h2.single-head
        支払い方法
      = form_tag(credit_cards_path, method: :post, id: "add-card", name: "inputForm") do
        .single-content
          .form-group__card-top
            %label
              カード番号
            %span.absolute
              必須
            %input{maxlength: "16", name: "number", id: "card_number", type: 'text', placeholder: "半角数字のみ", class: "input-default"}
          %br
          #message_new
          .form-group__image
            = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1248199994', width: '49px', height: '20px', class: "form-group__image__images")
            = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1248199994', width: '34px', height: '20px', class: "form-group__image__images")
            = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1248199994', width: '30px', height: '20px', class: "form-group__image__images")
            = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1248199994', width: '32px', height: '20px', class: "form-group__image__images")
            = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1248199994', width: '21px', height: '20px', class: "form-group__image__images")
            = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1248199994', width: '32px', height: '20px', class: "form-group__image__images")
            = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1248199994', width: '32px', height: '20px', class: "form-group__image__images")
          .form-group
            %label
              有効期限
            %span.absolute
              必須
            %br
            .expiration-date-wrap
              .expiration-date-wrap__year
                = fa_icon 'chevron-down', class: 'expiration-date-wrap__year__btn'
                %select#exp_month{maxlength: "2", name: "exp_month", type: "text", prompt: '--', class: "birthday-select-wrap__month__btn__select"}
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
              .expiration-date-wrap__font 月

              .expiration-date-wrap__month
                = fa_icon 'chevron-down', class: 'expiration-date-wrap__month__btn'
                %select#exp_year{maxlength: "4", name: "exp_year", type: "text", prompt: '--', class: "birthday-select-wrap__month__btn__select"}
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
              .expiration-date-wrap__font 年
          %br
          #message_expired_new
          .form-group
            %label
              セキュリティコード
            %span.absolute
              必須
            %input{maxlength: "4", name: "cvc", id: "cvc", type: 'text', placeholder: "カード背面4桁もしくは3桁の番号", class: "input-default"}
            #message_cvc_new
            #card_token
          .form-group5
            = link_to('#', class: 'form-group5__pay-link') do
              = fa_icon('question-circle', class: 'pry-link__icon')
              カード裏面の番号とは？
          %submit.next-btn#token_submit{type: "submit", name: "submit-btn"} 次へ進む
  = render 'shared/exhibition-page-footer'